<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/btnServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Exit"
        android:layout_alignParentRight="true"
        android:layout_marginRight="53dp"
        android:text="@string/Server" />

    <Button
        android:id="@+id/btnSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnServer"
        android:layout_alignBottom="@+id/btnServer"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:text="@string/Sensor" />

    <Button
        android:id="@+id/Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnSensor"
        android:layout_centerVertical="true"
        android:layout_marginRight="18dp"
        android:text="@string/Settings" />

    <Button
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnServer"
        android:layout_centerVertical="true"
        android:layout_marginRight="42dp"
        android:text="@string/Exit" />

</RelativeLayout>
